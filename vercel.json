{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/chat",
            "dest": "/app.py"
        },
        {
            "src": "/health",
            "dest": "/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}